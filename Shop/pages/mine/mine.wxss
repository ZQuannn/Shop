/* pages/mine/mine.wxss */
.mine_wrap {
  width: 100%;
  position: relative;
  background-color: rgb(247, 247, 247);
  height: 1300rpx;
}

/* 用户头像 */
.mine_header {
  width: 100%;
  height: 300rpx;
  background-color: #FFDD00;
  position: relative;
}

.mine_head {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  top: 70rpx;
  left: 80rpx;
}

.mine_name {
  position: absolute;
  left: 230rpx;
  top: 112rpx;
}

/* 我的订单 */
.mine_order {
  position: absolute;
  top: 230rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 86%;
  padding: 30rpx 20rpx;
  height: 160rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.mine_order_header {
  display: flex;
  justify-content: space-between;
  padding: 0 0 20rpx 0;
  border-bottom: 1px solid #e2dfdf;
  color: rgb(78, 76, 76);
}

.mine_order_header view:first-of-type {
  font-size: 35rpx;
}

.mine_order_header view:last-of-type {
  font-size: 25rpx;
}

/* 订单导航 */
.mine_order_nav {
  width: 100%;
}