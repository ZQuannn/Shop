/* pages/goods/goods.wxss */
.goods_wrap {
  width: 96%;
  padding: 3% 2%;
  background-color: #f7f7f7;
}

/* 商品图片 */
.goods_banner {
  width: 100%;
  height: 750rpx;
}

.goods_img {
  width: 100%;
  height: 100%;
}

/* 商品信息 */
.goods_price {
  margin-top: 10rpx;
  color: #ff495e;
  font-size: 40rpx;
}

.goods_title {
  background-color: #fff;
  margin-bottom: 25rpx;
}

.goods_line_price {
  text-decoration: line-through;
  padding-left: 10rpx;
  color: #999;
  font-size: 24rpx;
}

.goods_sale {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  color: #888;
  font-size: 28rpx;
}

/* 商品购买 */
.goods_buy {
  background-color: #fff;
}

.goods_num {
  color: #333;
  padding: 15rpx 0;
  border-bottom: 1px solid #ddd;
}

.goods_add {
  padding: 20rpx 0;
}

.goods_add_label {
  color: #888;
  background: #fff;
  margin-bottom: 10rpx;
}

van-stepper input {
  color: #000 !important;
}

/* 商品描述 */
.goods_info {
  width: 100%;
  margin: 20rpx 0;
  margin-bottom: 100rpx;
  background-color: #fff;
}

.goods_banner {
  margin: 20rpx 0;
}

/* 底部下单 */
.goods_confirm {
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 2;
}

/* 侧边栏 */
.goAnyWhere {
  position: fixed;
  right: 50rpx;
  bottom: 350rpx;
}

.goAnyWhere_view {
  padding: 2rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  margin-top: 10rpx;
}

.changeClo {
  margin-top: 10rpx;
  padding: 2rpx;
  border-radius: 50%;
  background-color: rgba(255, 84, 84, 0.8) !important;
}