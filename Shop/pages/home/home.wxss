/* pages/home/home.wxss */
.home_wrap {
  background-color: #f7f7f7;
  width: 96%;
  padding: 3% 2%;
}

/* 搜索框 */
.home_search {
  width: 95%;
  padding: 5rpx 0;
  border-radius: 10rpx;
  background-color: #fff;
  margin: 0 auto;
  text-align: center;
  color: #999;
  font-size: 36rpx;
}

/* 轮播图 */
.home_banner {
  margin-top: 20rpx;
}

.home_banner image {
  width: 768rpx;
  height: 576rpx;
}

/* 新品推荐 */
.newgoods_title {
  margin-top: 20rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  font-weight: 700;
  margin-left: -10rpx;
  text-align: center;
  background-color: #fff;
}

.newgoods_info {
  background-color: #fff;
}

.newgoods_img {
  width: 160rpx;
  height: 160rpx;

}

.newgoods_name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
  width: 160rpx;
}

.newsgoods_price {
  color: #ff495e;
}

/* 猜你喜欢 */
.recommend_title {
  margin: 0 auto;
  width: 80%;
  text-align: center;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.recommend_name {
  background-color: #f2f2f2;
  color: f7f7f7;
}

.recommend_hr {
  width: 35%;
  height: 2rpx;
  background-color: #ddd;
  display: inline;
  margin-top: 25rpx;
}

.recommend_goods {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.recommend_good {
  width: 49%;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.recommend_good image {
  width: 100%;
  height: 375rpx;
}

.recommend_good_name {
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.recommend_good_price {
  margin-bottom: 10rpx;
}

/* 底部 */
.home_footer {
  text-align: center;
  color: #999;
  margin-top: 20rpx;
  font-size: 28rpx;
}

